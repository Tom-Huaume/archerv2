{% extends 'base.html.twig' %}

{% block title %}
    Evenement | {{ parent() }}
{% endblock %}

{% block body %}
<div class="container">

    <h2>Liste des évènements</h2>


        <div class="row">
            <div class="col-md-2"></div>
            <div class="col-md-8">
                {% if is_granted("ROLE_SECRETAIRE") %}
                    <a href="{{ path('evenement_create') }}">
                        <button type="button" class="btn btn-success btn-lg my-3 btn-event pastel">Créer un évènement</button>
                    </a>
                {% endif %}
                {% for e in evenements %}
                    <a href="{{ path('evenement_detail', {'id' : e.id}) }}">
                        <div class="card text-white bg-primary mb-3">
                            <div class="card-header" style="color: white;">{{ e.lieuDestination.nom }}</div>
                            <div class="card-body">
                                <h4 class="card-title" style="color: white;">{{ e.nom }}</h4>
                                <p class="card-text" style="color: white;">{{ e.description | nl2br }}</p>
                            </div>
                        </div>
                    </a>
                {% endfor %}
            </div>
            <div class="col-md-2"></div>

        </div>


</div>
{% endblock %}



