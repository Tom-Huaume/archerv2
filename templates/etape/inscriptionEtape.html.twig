{% extends 'base.html.twig' %}

{% block title %}
    Inscription | {{ parent() }}
{% endblock %}

{% block body %}
    <div class="container">

        <h2>Validation de l'inscription</h2>
        <div class="row mt-4">
            <div class="col-2"></div>
            <div class="col-8">
                {{ form_start(inscriptionEtapeForm) }}
                <h4>Veuillez s√©lectionner votre arme</h4>
                <div class="row mb-4">
                    <div class="col-md-4">{{ form_widget(inscriptionEtapeForm.listeArmes) }}</div>
                    <div class="col-md-8"></div>
                </div>


                <h4>Souhaitez vous ajouter un commentaire ? (Facultatif)</h4>
                {{ form_widget(inscriptionEtapeForm.commentaire) }}
                <div class="col mt-4 d-flex align-items-center justify-content-center">
                    <a href="{{ path('evenement_detail', {'id' : evenementId}) }}" class="btn btn-secondary">Annuler</a>
                    <button class="btn m-1 btn-success">Valider l'inscription</button>
                </div>
                {{ form_end(inscriptionEtapeForm) }}
            </div>
            <div class="col-2"></div>
        </div>

    </div>

{% endblock %}


